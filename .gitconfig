[user]
	name = Siddhartha
	email = sid@chegg.com

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = $HOME/.gitignore_global
	editor = vim

[alias]
	co = checkout
	d = difftool
	logg = "!git log `git rev-parse --abbrev-ref HEAD` ^stage"

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[push]
	default = simple
